	"pages": [
		// 演示-组件
		{
			"path": "pages/search/search-page",
			"style": {
				"navigationBarTitleText": "Search",
				"navigationBarBackgroundColor":"#c7e5c8",
				"navigationBarTextStyle":"black"
			}
		},
		{
			"path": "pages/glossary/glossary-page",
			"style": {
				"navigationBarTitleText": "Glossary",
				"navigationBarBackgroundColor":"#c7e5c8",
				"navigationBarTextStyle":"black"
			}
		},
		{
			"path": "pages/flashcard/flashcard-page",
			"style": {
				"navigationBarTitleText": "Flash Card",
				"navigationBarBackgroundColor":"#c7e5c8",
				"navigationBarTextStyle":"black"
			}
		},
		{
			"path": "pages/todolist/todolist-page",
			"style": {
				"navigationBarTitleText": "Todo List",
				"navigationBarBackgroundColor":"#c7e5c8",
				"navigationBarTextStyle":"black"
			}
		},
		// fullScreen-压窗屏
		{
			"path": "uview-ui/components/u-full-screen/u-full-screen",
			"style": {
				"navigationStyle": "custom",
				"app-plus": {
					"animationType": "fade-in",
					"background": "transparent",
					"backgroundColor": "rgba(0,0,0,0)",
					"popGesture": "none"
				}
			}
		}
	],
	"subPackages": [{
			"root": "pages/search",
			"pages": [
				// test-测试
				{
					"path": "search-page",
					"style": {
						"navigationBarTitleText": "Test"
						// "navigationStyle": "custom" ,// 隐藏系统导航栏
						// "navigationBarTextStyle": "white" // 状态栏字体为白色
					}
				},
				{
					"path":"image/image",
					"style":{
						"navigationBarTitleText": "Test"
					}
				}
				// gap-间隔槽
			    ,{
                    "path" : "voice/voice",
                    "style" :                                                                                    
                {
                    "navigationBarTitleText": "",
                    "enablePullDownRefresh": false
                }
                
                }
            ]
		},
		{
			"root": "pages/todolist",
			"pages": [
				// test-测试
				{
					"path": "todolist-page",
					"style": {
						"navigationBarTitleText": "Test"
						// "navigationStyle": "custom" ,// 隐藏系统导航栏
						// "navigationBarTextStyle": "white" // 状态栏字体为白色
					}
				}
				// gap-间隔槽
			]
		}
	],
	"preloadRule": {
		"pages/example/components": {
			"network": "all",
			"packages": ["pages/search/search-page", "pages/glossary",  "pages/todolist",  "pages/flashcard"]
		}
	},
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uView"
	},
	"tabBar": {
		"color": "#909399",
		"selectedColor": "#303133",
		"backgroundColor": "#FFFFFF",
		"borderStyle": "black",
		"list": [{
				"pagePath": "pages/search/search-page",
				"iconPath": "static/icons/icon-magnifying_glass.svg",
				"selectedIconPath": "static/icons/icon-magnifying_glass-s.svg",
				"text": "Search"
			}, {
				"pagePath": "pages/glossary/glossary-page",
				"iconPath": "static/icons/icon-book.svg",
				"selectedIconPath": "static/icons/icon-book-s.svg",
				"text": "Glossary"
			},
			{
				"pagePath": "pages/flashcard/flashcard-page",
				"iconPath": "static/icons/icon-paper.svg",
				"selectedIconPath": "static/icons/icon-paper-s.svg",
				"text": "Flash Card"
			},
			{
				"pagePath": "pages/todolist/todolist-page",
				"iconPath": "static/icons/icon-note.svg",
				"selectedIconPath": "static/icons/icon-note-s.svg",
				"text": "Todo List"
			}
		]
	}
}
